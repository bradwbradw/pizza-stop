    "agenda": "^5.0.0",
    "better-sqlite3": "^8.0.1",
    "body-parser": "^1.20.1",
    "browserify": "^17.0.0",
    "ccxt": "^2.6.36",
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.3",
    "ethereumjs-util": "^7.1.5",
    "express": "^4.18.2",
    "folder-hash": "^4.0.4",
    "gas-price-oracle": "^0.5.2",
    "install": "^0.13.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.0",
    "node-localstorage": "^2.2.1",
    "npm": "^9.3.1",
    "sanitize-filename": "^1.6.3",
    "sass": "^1.57.1",
    "sqlite3": "^5.1.4",
    "superagent": "^8.0.8",
    "swagger-client": "^3.18.5",
