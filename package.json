    "body-parser": "^1.19.0",
    "browserify": "^17.0.0",
    "ccxt": "^1.62.63",
    "discord.js": "^13.7.0",
    "dotenv": "^8.2.0",
    "ethereumjs-util": "^7.1.4",
    "express": "^4.17.1",
    "folder-hash": "^4.0.2",
    "gas-price-oracle": "^0.4.7",
    "googleapis": "^110.0.0",
    "install": "^0.13.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "moralis": "0.0.132",
    "node-fetch": "^2.6.1",
    "node-localstorage": "^2.2.1",
    "npm": "^8.10.0",
    "sanitize-filename": "^1.6.3",
    "sass": "^1.51.0",
    "sqlite3": "^5.0.2",
    "superagent": "^6.1.0",
    "swagger-client": "^3.16.1",
    "web3": "^1.6.0",
    "when": "^3.7.8"
