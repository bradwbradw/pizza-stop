  "name": "pizza-stop",
  "version": "0.0.1",
  "description": "Visualize your crypto portfolio using a simple pizza / slice model for tracking asset values.",
  "main": "server/start.js",
  "watch": {
    "build-css": {
      "patterns": "scss",
      "extensions": "scss"
    },
    "start": [
      "server",
      "component",
      "module"
    ]
  },
  "scripts": {
    "test": "mocha --watch",
    "test-ui": "open-cli http://localhost:3002/test.html",
    "bundle-ethereum": "browserify ethereumjs-modules.js -s EthereumJS > public/js/build/ethereum.js",
    "build-css": "node-sass --include-path scss scss/style.scss  public/style.css",
    "start": "node server/start.js",
    "dev": "npm-watch",
    "ui": "npx browser-sync http://localhost:5678 'public' -w"
  },
  "dependencies": {
    "@ethereumjs/common": "^2.6.1",
    "@ethereumjs/tx": "^3.5.0",
